{
  "name": "week2_core_runtime_smoke",
  "description": "Week 2 smoke pipeline for core runtime structures and baseline compatibility.",
  "report_path": "outputs/week2/week2_pipeline_report.json",
  "steps": [
    {
      "name": "verify_baseline_lock",
      "command": [
        "${PYTHON}",
        "evaluation/verify_baseline_lock.py"
      ]
    },
    {
      "name": "week2_smoke",
      "command": [
        "${PYTHON}",
        "evaluation/week2_smoke.py"
      ]
    },
    {
      "name": "validate_prompt_contracts",
      "command": [
        "${PYTHON}",
        "evaluation/validate_prompt_contracts.py"
      ]
    },
    {
      "name": "unit_tests",
      "command": [
        "${PYTHON}",
        "-m",
        "unittest",
        "discover",
        "-s",
        "tests",
        "-p",
        "test_*.py"
      ]
    }
  ]
}
