{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://staybooking.local/schemas/bug_report.json",
  "title": "BugReport",
  "type": "object",
  "required": [
    "bug_id",
    "severity",
    "category",
    "file",
    "description",
    "related_requirement"
  ],
  "properties": {
    "bug_id": {
      "type": "string"
    },
    "severity": {
      "type": "string",
      "enum": [
        "Critical",
        "Major",
        "Minor",
        "Trivial"
      ]
    },
    "category": {
      "type": "string",
      "enum": [
        "Logic",
        "Security",
        "Performance",
        "Style"
      ]
    },
    "file": {
      "type": "string"
    },
    "line_range": {
      "type": "array",
      "items": {
        "type": "integer"
      },
      "minItems": 2,
      "maxItems": 2
    },
    "description": {
      "type": "string"
    },
    "related_requirement": {
      "type": "string"
    },
    "suggested_fix": {
      "type": "string"
    },
    "test_case": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
