{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://staybooking.local/schemas/requirements.json",
  "title": "RequirementsDocument",
  "type": "object",
  "required": [
    "project_name",
    "functional_requirements",
    "non_functional_requirements",
    "api_contracts",
    "data_model"
  ],
  "properties": {
    "project_name": {
      "type": "string",
      "minLength": 1
    },
    "functional_requirements": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "user_story",
          "acceptance_criteria",
          "priority",
          "complexity"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "user_story": {
            "type": "string"
          },
          "acceptance_criteria": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "string"
            }
          },
          "priority": {
            "type": "string",
            "enum": [
              "Must",
              "Should",
              "Could",
              "Won't"
            ]
          },
          "complexity": {
            "type": "string",
            "enum": [
              "Low",
              "Medium",
              "High"
            ]
          }
        },
        "additionalProperties": true
      }
    },
    "non_functional_requirements": {
      "type": "array",
      "items": {
        "type": "object"
      }
    },
    "api_contracts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "endpoint",
          "method"
        ],
        "properties": {
          "endpoint": {
            "type": "string"
          },
          "method": {
            "type": "string"
          },
          "request_schema": {
            "type": [
              "object",
              "null"
            ]
          },
          "response_schema": {
            "type": [
              "object",
              "null"
            ]
          },
          "auth_required": {
            "type": "boolean"
          }
        },
        "additionalProperties": true
      }
    },
    "data_model": {
      "type": "object",
      "required": [
        "entities",
        "relationships"
      ],
      "properties": {
        "entities": {
          "type": "array"
        },
        "relationships": {
          "type": "array"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
