{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://staybooking.local/schemas/project_state.json",
  "title": "ProjectState",
  "type": "object",
  "required": [
    "run_id",
    "created_at",
    "updated_at",
    "iteration",
    "total_tokens",
    "total_api_calls",
    "artifact_store",
    "message_log"
  ],
  "properties": {
    "run_id": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "updated_at": {
      "type": "string"
    },
    "requirements": {
      "type": [
        "object",
        "null"
      ]
    },
    "architecture": {
      "type": [
        "object",
        "null"
      ]
    },
    "backend_code": {
      "type": [
        "object",
        "null"
      ]
    },
    "frontend_code": {
      "type": [
        "object",
        "null"
      ]
    },
    "qa_report": {
      "type": [
        "object",
        "null"
      ]
    },
    "deployment": {
      "type": [
        "object",
        "null"
      ]
    },
    "iteration": {
      "type": "integer",
      "minimum": 0
    },
    "total_tokens": {
      "type": "integer",
      "minimum": 0
    },
    "total_api_calls": {
      "type": "integer",
      "minimum": 0
    },
    "artifact_store": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "object",
          "required": [
            "artifact_id",
            "artifact_type",
            "producer",
            "version",
            "created_at"
          ],
          "properties": {
            "artifact_id": {
              "type": "string"
            },
            "artifact_type": {
              "type": "string"
            },
            "producer": {
              "type": "string"
            },
            "content": {},
            "version": {
              "type": "integer",
              "minimum": 1
            },
            "created_at": {
              "type": "string"
            },
            "metadata": {
              "type": "object"
            }
          },
          "additionalProperties": true
        }
      }
    },
    "message_log": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sender",
          "receiver",
          "content",
          "msg_type",
          "timestamp"
        ],
        "properties": {
          "sender": {
            "type": "string"
          },
          "receiver": {
            "type": "string"
          },
          "content": {
            "type": "string"
          },
          "msg_type": {
            "type": "string"
          },
          "artifacts": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "timestamp": {
            "type": "string"
          },
          "metadata": {
            "type": "object"
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
